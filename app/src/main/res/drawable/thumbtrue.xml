<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/white"/>
            <size
                android:height="4dp"
                android:width="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/FS_dark_gray"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/moon"
        android:top="4dp"
        android:bottom="4dp"
        android:right="4dp"
        android:left="4dp"/>



</layer-list>