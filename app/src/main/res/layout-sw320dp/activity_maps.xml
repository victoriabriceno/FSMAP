<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/slideup"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:background="#d3d3d3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        map:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:id="@+id/roomnumber"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/questrialregular"
            android:text="Room Number"
            android:textSize="15dp"
            android:textStyle="bold"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0" />


        <ImageButton
            android:id="@+id/btnRemoveFavorites"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_above="@id/navgo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="10dp"
            android:foreground="@drawable/starfull"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.954"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.323" />

        <AutoCompleteTextView
            android:id="@+id/From"
            android:layout_width="252dp"
            android:layout_height="42dp"
            android:layout_below="@id/Destination"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/custom_imput2"
            android:fontFamily="@font/questrialregular"
            android:hint="From"
            android:paddingLeft="10dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.055"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.352" />

        <ImageButton
            android:id="@+id/btnAddFavorites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/navgo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="10dp"
            android:foreground="@drawable/star"
            android:visibility="gone"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.844"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.338" />

        <Button
            android:id="@+id/navgo"
            android:layout_width="66dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_imput2"
            android:fontFamily="@font/questrialregular"
            android:text="GO"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.851"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.795" />

        <AutoCompleteTextView
            android:id="@+id/Destination"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:layout_below="@id/roomnumber"
            android:layout_marginHorizontal="0dp"
            android:background="@drawable/custom_imput2"
            android:hint="To"
            android:paddingLeft="10dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.067"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.805" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/NavDone"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/gps"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:text="Done"
        android:visibility="gone"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/SaveSpot"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/slideup"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="0dp"
        android:background="@drawable/custom_input"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:text="Save Spot"
        android:paddingLeft="10dp"
        android:visibility="visible"
        map:layout_constraintBottom_toTopOf="@+id/slideup"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.054"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.971" />

    <Button
        android:id="@+id/RemoveSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/slideup"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="0dp"
        android:backgroundTint="@color/orange"
        android:text="Remove Spot"
        android:visibility="gone"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userMaps"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_alignLeft="@id/search_bar"
        android:background="@drawable/user2"
        map:layout_constraintBottom_toTopOf="@+id/SaveSpot"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.045"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.035" />

    <ImageView
        android:id="@+id/gps"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ZoomIn"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/gps"
        map:layout_constraintBottom_toTopOf="@+id/slideup"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.986"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.733" />

    <ImageView
        android:id="@+id/ZoomIn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ZoomOut"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/plus"
        android:paddingRight="10dp"
        map:layout_constraintBottom_toTopOf="@+id/slideup"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.986"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.847" />

    <ImageView
        android:id="@+id/ZoomOut"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_above="@+id/slideup"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/minus"
        map:layout_constraintBottom_toTopOf="@+id/slideup"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.935"
        android:paddingLeft="10dp"/>

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="310dp"
        android:layout_height="53dp"
        android:background="@drawable/white_boarder"
        android:elevation="15dp"
        map:layout_constraintBottom_toTopOf="@+id/slideup"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.863"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:layout_constraintVertical_bias="0.031">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"

            />

        <AutoCompleteTextView
            android:id="@+id/input_Search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/ic_magnify"
            android:background="@null"
            android:hint="Enter a classroom"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:translationZ="90dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
