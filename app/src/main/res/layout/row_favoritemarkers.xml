<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="459dp"
        android:layout_height="48dp">


        <ImageButton
            android:id="@+id/trashFavorites"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/trash"
            android:fontFamily="@font/questrialregular"
            android:textSize="15dp" />

        <ImageButton

            android:id="@+id/editFavorites"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/pencil"
            android:fontFamily="@font/questrialregular"
            android:onClick="store_input"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/marker"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="408dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/map_marker">

        </RelativeLayout>

        <EditText
            android:id="@+id/TitleMarker"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="21dp"
            android:background="@null"
            android:fontFamily="@font/questrialregular"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/FS_gray"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/orginalName"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="19dp"
            android:background="@null"
            android:fontFamily="@font/questrialregular"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/FS_gray"
            android:textSize="15dp"
            android:visibility="invisible" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>