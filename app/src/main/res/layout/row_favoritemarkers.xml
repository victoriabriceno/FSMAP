<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="58dp">


        <ImageButton
            android:id="@+id/trashFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/marker"
            android:background="@drawable/bin"
            android:fontFamily="@font/questrialregular"
            android:textSize="15dp" />

        <ImageButton

            android:id="@+id/editFavorites"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:layout_marginStart="270dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/marker"
            android:background="@drawable/edit"
            android:fontFamily="@font/questrialregular"
            android:onClick="store_input"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/marker"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/location_marker_favoritedesign">

        </RelativeLayout>

        <EditText
            android:id="@+id/TitleMarker"
            android:layout_width="226dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/marker"
            android:background="@null"
            android:fontFamily="@font/questrialregular"
            android:imeOptions="actionDone"
            android:singleLine = "true"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/OriginalTitle"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/marker"
            android:fontFamily="@font/questrialregular"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:visibility="invisible" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>