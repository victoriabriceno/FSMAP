<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:id="@+id/slideup"
        android:background = "#d3d3d3"
        android:orientation = "vertical"
        android:layout_alignParentBottom = "true"
        android:layout_width = "match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_height = "175dp"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <TextView
            android:id="@+id/roomnumber"
            android:text= "Potato Holder"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content" />


        <ImageButton
            android:id="@+id/btnRemoveFavorites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/navgo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="10dp"
            android:foreground="@drawable/starvisible" />

        <AutoCompleteTextView
            android:id="@+id/From"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Destination"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="0dp"
            android:hint="From"
            android:layout_gravity="bottom"/>

        <ImageButton
            android:id="@+id/btnAddFavorites"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/navgo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="10dp"
            android:foreground="@drawable/starempty" />

        <Button
            android:id="@+id/navgo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="@color/orange"
            android:text="Go" />

        <AutoCompleteTextView
            android:id="@+id/Destination"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomnumber"
            android:layout_marginHorizontal="0dp"
            android:hint="To"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/user"
        android:layout_width="156dp"
        android:layout_height="115dp"
        android:layout_alignLeft="@id/search_bar"
        android:layout_marginLeft="-133dp"
        android:background="@drawable/userprofilefinal" />

    <ImageView
        android:id="@+id/gps"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ZoomIn"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/gps" />

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="834dp"
        android:layout_height="59dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_boarder"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ic_magnify"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/input_Search"
            android:background="@null"
            android:hint="Enter a classroom"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:translationZ="90dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/NavDone"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="5dp"
        android:layout_above="@+id/gps"
        android:gravity="center"
        android:backgroundTint="@color/orange"
        android:text="Done"
        android:visibility="gone"/>

    <Button
        android:id="@+id/SaveSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/slideup"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginVertical="0dp"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/orange"
        android:text="Save Spot"
        android:visibility="visible"/>
    <Button
        android:id="@+id/RemoveSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slideup"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginVertical="0dp"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/orange"
        android:text="Remove Spot"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ZoomIn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ZoomOut"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/orange_plus" />
    <ImageView
        android:id="@+id/ZoomOut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/slideup"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/orange_minus" />

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/vie_bg"
        android:visibility="gone"
        android:id="@+id/saveSpotLayout">

        <EditText
            android:id="@+id/MarkerName"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:hint="Type In Marker Name"
            android:textColorHint="@color/black"
            android:gravity="center"
            android:inputType="text"/>

        <TextView
            android:id="@+id/SaveSpotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:text="Save Spot"
            android:fontFamily="@font/amaticscbold"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/OkMarkerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="18dp"
            android:textColor="@color/light_gray"
            android:backgroundTint="@color/orange"
            android:text="Set" />
    </RelativeLayout>
</RelativeLayout>